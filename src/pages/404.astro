---
import Layout from "@/layouts/DefaultLayout.astro";
---

<Layout title="404: Not found">
  <div id="container">
    <h1>
      <span>404:</span>

      <span>Not Found</span>
    </h1>

    <p>
      {Astro.url.pathname}
    </p>

    <a href="/">Homepage</a>
  </div>
</Layout>

<style>
  #container {
    display: flex;
    flex-direction: column;
    align-items: center;

    h1 {
      font-size: 2.25rem;

      span:first-child {
        color: var(--color-primary);
      }
    }

    p {
      border: 1px solid var(--color-foreground);
      border-radius: 0.25rem;
      padding-inline: 0.5rem;
      padding-block: 1rem;
      margin-bottom: 1rem;
    }

    a {
      text-decoration: underline;

      &:hover {
        color: var(--color-primary);
      }
    }
  }
</style>
