---
import BaseHead from "@/components/BaseHead.astro";
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <BaseHead />
  </head>

  <body
    class="min-h-screen max-w-2xl mx-auto font-cascadia-code hyphens-auto flex flex-col justify-center text-white bg-zinc-900 p-4 md:p-6 lg:p-8"
  >
    <slot />
  </body>
</html>
