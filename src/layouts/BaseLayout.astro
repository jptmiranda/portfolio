---
import { languageTag } from "@/paraglide/runtime";
import BaseHead from "../components/BaseHead.astro";
import "../styles/main.css";
---

<!doctype html>
<html lang={languageTag()} dir={Astro.locals.paraglide.dir}>
  <head>
    <BaseHead />

    <style>
      body {
        @apply min-h-screen max-w-xl mx-auto 
          font-cascadia-code hyphens-auto flex 
          flex-col justify-center text-white 
          bg-zinc-900;
      }
    </style>
  </head>

  <slot />
</html>
