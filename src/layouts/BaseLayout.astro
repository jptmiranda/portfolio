---
import BaseHead from "@/components/BaseHead.astro";
import "@/styles/main.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <BaseHead />

    <style>
      body {
        @apply min-h-screen max-w-2xl mx-auto 
          font-cascadia-code hyphens-auto flex 
          flex-col justify-center text-white 
          bg-zinc-900 px-4 md:px-6 lg:px-8;
      }
    </style>
  </head>

  <slot />
</html>
